body

  .navbar.navbar-inverse.navbar-fixed-top
     .container
        .navbar-header
          a.navbar-brand Push
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active = link_to "Mes applis", apps_path
              
          ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              li = link_to "Se d√©connecter", destroy_user_session_path, method: :delete
